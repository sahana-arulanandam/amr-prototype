<?xml version="1.0" ?>
<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- Material Definition -->
  <material name="silver">
    <color rgba="0.700 0.700 0.700 1.000"/>
  </material>

  <xacro:property name="body_color" value="Gazebo/Silver"/>

  <!-- Gazebo Properties for Links -->
  <gazebo reference="base_link">
    <material>${body_color}</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
    <self_collide>false</self_collide>
    <gravity>true</gravity>
  </gazebo>

  <gazebo reference="right_wheel_1">
    <material>${body_color}</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <self_collide>false</self_collide>
  </gazebo>

  <gazebo reference="left_wheel_1">
    <material>${body_color}</material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <self_collide>false</self_collide>
  </gazebo>

  <gazebo reference="lidar_1">
    <material>${body_color}</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
    <self_collide>false</self_collide>
  </gazebo>

  <gazebo reference="caster_wheel">
    <material>${body_color}</material>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
    <self_collide>false</self_collide>
  </gazebo>

  <!-- Gazebo Plugins -->
  <gazebo>
    <plugin filename="gz-sim-sensors-system" name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>

    <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
      <topic>/joint_states</topic>
    </plugin>

    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      <left_joint>left_wheel_joint</left_joint>
      <right_joint>right_wheel_joint</right_joint>
      <wheel_separation>0.198</wheel_separation>
      <wheel_radius>0.055</wheel_radius>
      <odom_publish_frequency>30</odom_publish_frequency>
      <topic>/cmd_vel</topic>
      <tf_topic>/tf</tf_topic>
      <frame_id>odom</frame_id>
      <odom_topic>odom</odom_topic>
      <child_frame_id>base_footprint</child_frame_id>
    </plugin>
  </gazebo>

  <!-- LIDAR Sensor (RPLIDAR C1) -->
  <gazebo reference="lidar_1">
    <sensor name="gpu_lidar" type="gpu_lidar">
      <pose>0 0 0 0 0 0</pose>
      <topic>scan</topic>
      <gz_frame_id>lidar_1</gz_frame_id>
      <update_rate>10</update_rate>
      <lidar>
        <scan>
          <horizontal>
            <samples>500</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>6.280000</max_angle>
          </horizontal>
          <vertical>
            <samples>1</samples>
            <resolution>1</resolution>
            <min_angle>0.0</min_angle>
            <max_angle>0.0</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.05</min>
          <max>12.0</max>
          <resolution>0.015</resolution>
        </range>
      </lidar>
      <visualize>true</visualize>
    </sensor>
  </gazebo>

  <!-- Links -->
  <link name="base_footprint"/>

  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.025" rpy="0 0 0"/>
      <mass value="1.5"/>
      <inertia ixx="0.001625" iyy="0.001625" izz="0.003125" ixy="0.0" iyz="0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.156 0.156 0.05"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.156 0.156 0.05"/>
      </geometry>
    </collision>
  </link>

  <link name="right_wheel_1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.15"/>
      <inertia ixx="0.000091" iyy="0.000051" izz="0.000091" ixy="0.0" iyz="0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.055" length="0.02"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.055" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <link name="left_wheel_1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.15"/>
      <inertia ixx="0.000091" iyy="0.000051" izz="0.000091" ixy="0.0" iyz="0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.055" length="0.02"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.055" length="0.02"/>
      </geometry>
    </collision>
  </link>

  <link name="lidar_1">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.11"/>
      <inertia ixx="0.000048" iyy="0.000048" izz="0.000067" ixy="0.0" iyz="0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.04"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.04"/>
      </geometry>
    </collision>
  </link>

  <link name="caster_wheel">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.000002" iyy="0.000002" izz="0.000002" ixy="0.0" iyz="0.0" ixz="0.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
      <material name="silver"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.01"/>
      </geometry>
    </collision>
  </link>

  <!-- Joints -->
  <joint name="base_joint" type="fixed">
    <origin xyz="0.0 0.0 0.03" rpy="0 0 0"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>

  <joint name="right_wheel_joint" type="continuous">
    <origin xyz="0.053 -0.099 0.0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="right_wheel_1"/>
    <axis xyz="0.0 1.0 0.0"/>
  </joint>

  <joint name="left_wheel_joint" type="continuous">
    <origin xyz="0.053 0.099 0.0" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="left_wheel_1"/>
    <axis xyz="0.0 1.0 0.0"/>
  </joint>

  <joint name="lidar_joint" type="fixed">
    <origin xyz="0.053 0.0 0.06" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="lidar_1"/>
  </joint>

  <joint name="caster_joint" type="fixed">
    <origin xyz="-0.053 0.0 -0.03" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="caster_wheel"/>
  </joint>

</robot>
